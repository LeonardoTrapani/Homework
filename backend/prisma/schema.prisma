// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int        @id @default(autoincrement())
  email          String     @unique
  hashedPassword String
  username       String
  updatedAt      DateTime   @updatedAt
  createdAt      DateTime   @default(now())
  homework       Homework[]
  days           Day[]
  week           Week?
}

model Homework {
  id             Int      @id @default(autoincrement())
  user           User     @relation(fields: [userId], references: [id])
  userId         Int
  name           String
  description    String
  subject        String
  expirationDate DateTime @db.Date
  plannedDate    DateTime @db.Date
  duration       Int
  completed      Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Day {
  id        Int      @id @default(autoincrement())
  freeHours Int      @db.SmallInt
  date      DateTime @db.Date
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model Week {
  id             Int      @id @default(autoincrement())
  userId         Int      @unique
  user           User     @relation(fields: [userId], references: [id])
  mondayHours    Int      @db.SmallInt
  tuesdayHours   Int      @db.SmallInt
  wednesdayHours Int      @db.SmallInt
  thursdayHours  Int      @db.SmallInt
  fridayHours    Int      @db.SmallInt
  saturdayHours  Int      @db.SmallInt
  sundayHours    Int      @db.SmallInt
  updatedAt      DateTime @updatedAt
  createdAt      DateTime @default(now())
}
