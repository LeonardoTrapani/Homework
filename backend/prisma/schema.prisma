// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "./ERD.png"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model User {
  id             Int        @id @default(autoincrement())
  email          String
  hashedPassword String
  username       String
  updatedAt      DateTime   @updatedAt
  createdAt      DateTime   @default(now())
  homework       Homework[]
  days           Day[]
  week           Week?
  subjects       Subject[]
  deleted        Boolean    @default(false)
  averageGrade   Int?
}

model Homework {
  id             Int           @id @default(autoincrement())
  user           User          @relation(fields: [userId], references: [id])
  userId         Int
  name           String
  description    String        @db.LongText
  expirationDate DateTime
  plannedDates   PlannedDate[]
  subject        Subject       @relation(fields: [subjectId], references: [id])
  subjectId      Int
  duration       Int
  timeToComplete Int           
  completed      Boolean       @default(false)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  deleted        Boolean       @default(false)
}

model Subject {
  id        Int        @id @default(autoincrement())
  name      String
  color     String
  homework  Homework[]
  user      User       @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  deleted   Boolean    @default(false)
  grades Grade[]
  averageGrade Int?
}

model PlannedDate {
  id              Int      @id @default(autoincrement())
  date            DateTime
  completed       Boolean  @default(false)
  minutesAssigned Int      @default(0)
  homework        Homework @relation(fields: [homeworkId], references: [id])
  homeworkId      Int
  deleted         Boolean  @default(false)
}

model Day {
  id              Int      @id @default(autoincrement())
  freeMins        Int
  minutesToAssign Int
  date            DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id])
  userId          Int
  deleted         Boolean  @default(false)
}

model Week {
  id                   Int      @id @default(autoincrement())
  userId               Int      @unique
  user                 User     @relation(fields: [userId], references: [id])
  mondayFreeMinutes    Int      @default(0) @db.SmallInt
  tuesdayFreeMinutes   Int      @default(0) @db.SmallInt
  wednesdayFreeMinutes Int      @default(0) @db.SmallInt
  thursdayFreeMinutes  Int      @default(0) @db.SmallInt
  fridayFreeMinutes    Int      @default(0) @db.SmallInt
  saturdayFreeMinutes  Int      @default(0) @db.SmallInt
  sundayFreeMinutes    Int      @default(0) @db.SmallInt
  updatedAt            DateTime @updatedAt
  createdAt            DateTime @default(now())
}

model Grade {
    id Int @id @default(autoincrement())
    subjectId Int
    subject Subject @relation(fields: [subjectId], references: [id])
  }

